<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_adv_background"
    tools:context="br.unb.appdev.igor.NewAdventureFragment">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="380dp"
        android:layout_height="537dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pop_up_nova_aventura_fundo" />

    <ImageView
        android:id="@+id/x_new_adventureid"
        android:layout_width="19dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:srcCompat="@drawable/fechar_criacao_aventura" />

    <ImageView
        android:id="@+id/botaoProntoid"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="232dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:srcCompat="@drawable/pronto_nova_aventura" />

    <EditText
        android:id="@+id/nomeAventuraid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Digite um nome à sua aventura"
        android:inputType="textMultiLine"
        android:lines="2"
        app:layout_constraintBottom_toTopOf="@+id/botaoProntoid"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="96dp"
        android:layout_height="18dp"
        android:layout_alignStart="@+id/nomeAventuraid"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        android:text="Criar aventura"
        android:textColor="@color/new_adv_background"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/x_new_adventureid"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />


    <TextView
        android:id="@+id/icone_fechar_newAdventureid"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_alignTop="@+id/x_new_adventureid"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="221dp"
        android:layout_height="39dp"
        android:layout_above="@+id/nomeAventuraid"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Dê um nome para a sua aventura"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/nomeAventuraid"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
