<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_adv_background"
    tools:context="br.unb.appdev.igor.NewAdventureFragment">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="380dp"
        android:layout_height="537dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pop_up_nova_aventura_fundo" />

    <ImageView
        android:id="@+id/x_new_sessionid"
        android:layout_width="19dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:srcCompat="@drawable/fechar_criacao_aventura" />


    <ImageButton
        android:id="@+id/botaoProntoid2"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="232dp"
        android:layout_marginStart="92dp"
        android:tint="#0b9c8d"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pronto_nova_aventura" />

    <TextView
        android:id="@+id/dateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="23/11"
        android:textColor="#FFFFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/botaoProntoid2"
        app:layout_constraintEnd_toEndOf="@+id/botaoProntoid2"
        app:layout_constraintStart_toStartOf="@+id/botaoProntoid2" />

    <ImageView
        android:id="@+id/botaoProntoid4"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="232dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:srcCompat="@drawable/pronto_nova_aventura"

        />

    <EditText
        android:id="@+id/nomeSessaoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Digite um nome à sua sessão"
        android:inputType="textMultiLine"
        android:lines="2"
        app:layout_constraintBottom_toTopOf="@+id/botaoProntoid2"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="96dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nomeSessaoid"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        android:text="Criar Sessão"
        android:textColor="@color/new_adv_background"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/x_new_sessionid"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />


    <ImageView
        android:id="@+id/icone_close_new_session"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_alignTop="@+id/x_new_sessionid"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/botao_adicionar_sessao"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="221dp"
        android:layout_height="39dp"
        android:layout_above="@+id/nomeSessaoid"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Dê um nome à próxima sessão"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/nomeSessaoid"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
